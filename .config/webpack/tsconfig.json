{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "./*": ["./*"]
    }
  },
  "ts-node": {
    "swc": true,
    "esm": true
  },
  "include": ["./**/*.ts"]
}